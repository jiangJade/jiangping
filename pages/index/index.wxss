.widget{
    position: relative;
    padding-top: 13rpx;
    padding-bottom: 13rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}
.widget__arrow{
    position: absolute;
    top: 14rpx;
    right: 22rpx;
    width: 16rpx;
    height: 16rpx;
}
.widget__line{
    content: " ";
    position: absolute;
    left: 20rpx;
    bottom: 0;
    right: 20rpx;
    height: 1rpx;
    background-color: #DFDFDF;
}